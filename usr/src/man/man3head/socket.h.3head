.ad
.br
.na
\fB\fBIPV6_RECVHOPOPTS\fR\fR
.ad
.sp .6
.RS 4n
variable-length IPv6 options, \fBcmsg_type\fR \fBIPV6_HOPOPTS\fR
.RE

.sp
.ne 2
.na
\fB\fBIPPROTO_IPV6\fR\fR
.ad
.br
.na
\fB\fBIPV6_RECVDSTOPTS\fR\fR
.ad
.sp .6
.RS 4n
variable-length IPv6 options, \fBcmsg_type\fR \fBIPV6_DSTOPTS\fR
