#
# Start/stop client NFS service
#

. /lib/svc/share/smf_include.sh

stop_nfsclnt()
{
	/sbin/umountall -F nfs
}

case "$1" in
'start')

	/sbin/mountall -F nfs
	/sbin/swapadd
	;;

'stop')
	stop_nfsclnt
	;;

*)
	echo "Usage: $0 { start | stop }"
	exit 1
	;;
esac
exit $SMF_EXIT_OK
