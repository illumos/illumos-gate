$(ROOTOPTPKG):
	$(INS.dir)

$(ROOTBIN): $(ROOTOPTPKG)
	$(INS.dir)

$(ROOTBIN)/%: %.ksh $(ROOTBIN)
	$(INS.rename)

$(ROOTTST): $(ROOTOPTPKG)
	$(INS.dir)

$(ROOTTSTDIR): $(ROOTTST)
	$(INS.dir)

$(ROOTTSTDIR)/%.ksh: %.ksh $(ROOTTSTDIR)
	$(INS.file)

$(ROOTTSTDIR)/%.out: %.out $(ROOTTSTDIR)
	$(INS.file)

%.exe: %.o $(SUPOBJS)
	$(LINK.c) -o $@ $< $(SUPOBJS) $(LDLIBS)
	$(POST_PROCESS)

$(ROOTTSTDIR)/%.exe: %.exe $(ROOTTSTDIR)
	$(INS.file)

all: install

%.exe.ln: %.c $(SUPOBJS)
	$(LINT.c) $< $(LDLIBS)

lint: $(LINTEXE)

clean:
	-$(RM) *.o $(CLEANFILES)

clobber: clean
	-$(RM) $(CLOBBERFILES)
