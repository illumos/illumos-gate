. /lib/svc/share/smf_include.sh

if [  `uname -p` = "sparc" ]; then
        exit $SMF_EXIT_OK
fi

if smf_is_globalzone; then
        if [ -f /etc/hostid ]; then
        	exit $SMF_EXIT_OK
        else
		host=`/usr/bin/hostid`  
                echo "# DO NOT EDIT" > /etc/hostid
		r=`echo "0x${host}" | /usr/bin/tr 'P-~!-O' '!-OP-~'`
		printf "\"%s\"\n"  $r >> /etc/hostid
        fi
fi

exit $SMF_EXIT_OK
