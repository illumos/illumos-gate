<service_bundle type='manifest' name='SUNWpmr:power'>

<service
	name='system/power'
	type='service'
	version='1'>

	<create_default_instance enabled='false' />

	<single_instance />

	<dependency
		name='usr'
		type='service'
		grouping='require_all'
		restart_on='none'>
		<service_fmri value='svc:/system/filesystem/minimal' />
	</dependency>

	<dependent
		name='power_multi-user'
		grouping='optional_all'
		restart_on='none'>
			<service_fmri value='svc:/milestone/multi-user' />
	</dependent>

	<exec_method
		type='method'
		name='start'
		exec='/lib/svc/method/svc-power %m'
		timeout_seconds='60'>
		<method_context working_directory='/'>
			<method_credential user='root' group='root'/>
		</method_context>
	</exec_method>

	<exec_method
		type='method'
		name='stop'
		exec='/lib/svc/method/svc-power %m'
		timeout_seconds='60'>
		<method_context working_directory='/'>
			<method_credential user='root' group='root'/>
		</method_context>
	</exec_method>

	<property_group name='startd' type='framework'>
		<propval name='duration' type='astring'
			value='transient' />
	</property_group>

	<property_group name='general' type='framework'>
		<!-- to start stop power daemon -->
		<propval name='action_authorization' type='astring'
			value='solaris.smf.manage.power' />
	</property_group>


	<stability value='Unstable' />

	<template>
		<common_name>
			<loctext xml:lang='C'>
			power management
			</loctext>
		</common_name>
		<documentation>
			<manpage title='powerd' section='8' manpath='/usr/share/man' />
			<manpage title='pmconfig' section='8' manpath='/usr/share/man' />
			<manpage title='dtpower' section='8' manpath='/usr/share/man' />
			<manpage title='power.conf' section='5' manpath='/usr/share/man' />
		</documentation>
	</template>
</service>

</service_bundle>
