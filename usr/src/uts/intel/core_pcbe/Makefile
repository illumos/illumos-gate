UTSBASE = ../..

#
# The following objects are autogenerated by cpcgen.
#
CPCGEN_OBJS	= \
	core_pcbe_cpcgen.o	\
	core_pcbe_bdw_de.o	\
	core_pcbe_bdw.o		\
	core_pcbe_bdx.o		\
	core_pcbe_bnl.o		\
	core_pcbe_clx.o		\
	core_pcbe_glm.o		\
	core_pcbe_glp.o		\
	core_pcbe_hsw.o		\
	core_pcbe_hsx.o		\
	core_pcbe_ivb.o		\
	core_pcbe_ivt.o		\
	core_pcbe_jkt.o		\
	core_pcbe_nhm_ep.o	\
	core_pcbe_nhm_ex.o	\
	core_pcbe_skl.o		\
	core_pcbe_skx.o		\
	core_pcbe_slm.o		\
	core_pcbe_snb.o		\
	core_pcbe_wsm_ep_dp.o	\
	core_pcbe_wsm_ep_sp.o	\
	core_pcbe_wsm_ex.o

CPCGEN_COMMON	= core_pcbe_cpcgen.c
CPCGEN_CMD	= $(CPCGEN) -d $(SRC)/data/perfmon -o .
CPCGEN_SRCS	= $(CPCGEN_OBJS:%.o=%.c) core_pcbe_cpcgen.h

#
#	Define module and object file sets.
#
MODULE		= pcbe.GenuineIntel.6.15
OBJECTS		= $(CORE_PCBE_OBJS:%=$(OBJS_DIR)/%)
OBJECTS		+= $(CPCGEN_OBJS:%=$(OBJS_DIR)/%)
LINTS		= $(CORE_PCBE_OBJS:%.o=$(LINTS_DIR)/%.ln)
ROOTMODULE	= $(ROOT_PSM_PCBE_DIR)/$(MODULE)

#
# This order matches the families declared in uts/intel/sys/x86_archext.h.
#
SOFTLINKS	= \
