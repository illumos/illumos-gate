# SUNWdrmr preremove script

PATH=/usr/bin:/usr/sbin:${PATH}
export PATH
EXIT=0

not_installed() {
	driver=$1
	grep "^[	 ]*${driver}\>" $BASEDIR/etc/name_to_major > \
		/dev/null 2>&1
	return $?
}

case "${ARCH}" in
	i386)
		not_installed i915 && rem_drv -b ${BASEDIR} i915 &&	\
		not_installed radeon && rem_drv -b ${BASEDIR} radeon || \
			EXIT=1

	;;
esac

exit ${EXIT}
