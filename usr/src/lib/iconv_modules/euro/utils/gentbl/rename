for i in `ls *.tbl`; do
	ren=`echo $i | perl -pe 's:%:_:'`
	mv $i $ren
	perl -i -pe 's:License"\).  :License").:' $ren
done

for i in `ls *.btbl`; do
	ren=`echo $i | perl -pe 's:%:_: ; s:btbl:tbl: ; s:ibm:IBM-:'`
	mv $i $ren
done
