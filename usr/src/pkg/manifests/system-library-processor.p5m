    reboot-needed=true
$(sparc_ONLY)dir path=platform/sun4u/lib/fs/zfs
$(sparc_ONLY)file path=platform/sun4u/lib/fs/zfs/bootblk group=sys mode=0444 \
    reboot-needed=true
